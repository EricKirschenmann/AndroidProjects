<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomTabStyle" parent="TextAppearance.Design.Tab" >
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">Roboto Medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="EntertainmentTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorEntertainment</item>
        <item name="colorPrimaryDark">@color/colorEntertainment_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
